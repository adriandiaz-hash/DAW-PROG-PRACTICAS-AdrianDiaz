import java.util.Scanner;
import java.util.InputMismatchException;

public class validar_nodo_red {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.println("----VALIDACIÓN DE NODO DE RED----");
        System.out.println("Introduce el nodo 1 (formato: letra mayúscula seguida de un guion y tres dígitos): ");
        String nodo1 = sc.nextLine();
        System.out.println("Introduce el nodo 2 (formato: letra mayúscula seguida de un guion y tres dígitos): ");
        String nodo2 = sc.nextLine();
        System.out.println("Introduce el nodo 3 (formato: letra mayúscula seguida de un guion y tres dígitos): ");
        String nodo3 = sc.nextLine();
        
        String nodoRed = "^[A-Z]2-[0-9]{3}$";
        try {
            validarNodo(nodo1, nodo2, nodo3);
        } catch (InputMismatchException e) {
            System.out.println(e.getMessage());
        }
    }

    public static void validarNodo(String nodo1, String nodo2, String nodo3) {
        if (nodo1.matches("^[A-Z]2-[0-9]{3}$") && nodo2.matches("^[A-Z]2-[0-9]{3}$") && nodo3.matches("^[A-Z]2-[0-9]{3}$")) {
            System.out.println("Los nodos de red son válidos.");
        } else {
            throw new InputMismatchException("Error: Uno o más nodos de red no cumplen con el formato requerido.");
        }
    }
}        