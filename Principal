import java.util.Scanner;

public class Principal {
    public static void main(String[] args) {
        
        Scanner sc = new Scanner(System.in);

        System.out.println("----Generador de direcciones IPv4----");
        
        int[] octetos = new int[4];
        int contador = 0;

        // El bucle sigue mientras no tengamos los 4 números
        while (contador < 4) {
            System.out.println("Introduce el octeto " + (contador + 1) + " (0-255): ");

            if (sc.hasNextInt()) {
                int numero = sc.nextInt();

                // Validamos el rango
                if (numero >= 0 && numero <= 255) {
                    octetos[contador] = numero; 
                    contador++; // ¡Solo avanzamos si todo está perfecto!
                } else {
                    System.out.println("Error: El número debe estar entre 0 y 255.");
                }
            } else {
                // Si no es un entero (ej: "hola"), entramos aquí
                String basura = sc.next(); 
                System.out.println("Error: '" + basura + "' no es un número.");
            }
        }
    }
}