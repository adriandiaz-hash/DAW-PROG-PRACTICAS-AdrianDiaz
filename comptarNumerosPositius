public static int comptarNumerosPositius(double[]vector) {
    int comptador = 0;
    for (int i = 0; i < vector.length; i++) {
        if (vector[i] > 0) {
            comptador++;
        }
    }
    return comptador;
}
public static int[] obtenirDobleSencerNumerosPositius(double[][] notes) {
    int totalPositivos = 0;
    int comptador = 0;

    for (int i = 0; i < notes.length; i++) {
            totalPositivos += comptarNumerosPositius(notes[i]);
    }
    int [] resultados = new int[totalPositivos];

    int k = 0; // Índice para movernos por el array 'resultados'
    for (int i = 0; i < notes.length; i++) {
        for (int j = 0; j < notes[i].length; j++) { // Recorremos columnas de cada fila
            if (notes[i][j] > 0) { // Si el número individual es positivo
                // Guardamos el doble de la parte entera (el cast a 'int' trunca los decimales)
                resultados[k] = (int) notes[i][j] * 2; // Doblamos la parte entera del número positivo
                k++; // Avanzamos a la siguiente posición del cofre
            }
        }
    return resultados;
}